{{#get "posts" visibility="internal" include="tags" limit="all" filter="tag:{{post.tags.[0].slug}}+id:-{{post.id}}" }}
  <div class="lang-switcher" style="display:flex; justify-content: center">
    {{#foreach posts}}
      {{#has tag="#multilang" visibility="internal"}}
          <a href="{{url}}" style="text-decoration: none; margin-left: 5px">
            {{#has tag="#cn" visibility="internal"}}
              🇨🇳 中国人
            {{else has tag="#jp" visibility="internal"}}
              🇯🇵 日本語
            {{else has tag="#kr" visibility="internal"}}
              🇰🇷 한국어
            {{else}}
              🇬🇧 English
            {{/has}}
          </a>
      {{/has}}
    {{/foreach}}
  </div>
{{/get}}