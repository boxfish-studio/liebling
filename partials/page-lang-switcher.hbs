{{#get "pages" include="tags" limit="all" filter="tag:{{post.tags.[0].slug}}+id:-{{post.id}}" }}
    {{#foreach pages as |page|}}
      {{#has tag="#multilang" visibility="internal"}}
        <div class="lang-switcher">
          <a href="{{url}}" style="text-decoration: none; text-align:center; z-index:5; margin-top:100px">
            {{#has tag="#cn"}}
              🇨🇳 中国人
            {{else has tag="#jp"}}
              🇯🇵 日本語
            {{else has tag="#kr" }}
              🇰🇷 한국어
            {{else}}
              🇬🇧 English
            {{/has}}
          </a>
        </div>
      {{/has}}
    {{/foreach}}
{{/get}}
